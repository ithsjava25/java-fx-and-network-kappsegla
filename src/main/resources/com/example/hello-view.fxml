<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox stylesheets="@../../css/style.css" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HelloController">
    <Text fx:id="messageLabel" styleClass="outlined-text"/>
    <HBox alignment="CENTER" spacing="20.0">
        <ImageView image="${controller.model.first}" onMouseClicked="#image1"/>
        <ImageView image="${controller.model.second}" onMouseClicked="#image2"/>
        <ImageView image="${controller.model.third}" onMouseClicked="#image3"/>
    </HBox>
</VBox>
